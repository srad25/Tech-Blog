<!-- Loop over each object in the projects array -->
{{#each posts as |postIt| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/post/{{postIt.id}}">{{postIt.title}}</a>
    </h2>

    <p>Created by {{postIt.user.name}} on {{format_date postIt.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{postIt.content}}
    </p>
  </div>
</div>
{{/each}}